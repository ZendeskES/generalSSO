<!DOCTYPE html>
<html>
<head>
    <title>generalSSO | JWT</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <link href="bootstrap-3.1.1-dist/css/bootstrap.min.css" media="screen" rel="stylesheet">
    <link href="stylesheets/style.css" media="screen" rel="stylesheet">
</head>
<body>
    <div class="container-fluid">
        <div class="navbar navbar-inverse">
            <div class="container-fluid">
                <div class="navbar-header">
                  <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                      <span class="sr-only">Toggle navigation</span>
                      <span class="icon-bar"></span>
                      <span class="icon-bar"></span>
                      <span class="icon-bar"></span>
                  </button>
                  <a class="navbar-brand">generalSSO</a>
                </div>
                <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li class="active"><a href="/jwt">JWT</a></li>
                    <li><a href="/saml">SAML</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                  <li><a href="/logout">Logout page</a></li>
                </ul>
                </div>
              </div>
        </div>
        <div class="row">
            <div class="col-md-8">
                <form class="form-horizontal">
                    <h4>Meta</h4>
                    <div class="well">
                        <!-- begin meta params -->
                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="hostname">Hostname</label>
                            <div class="col-sm-6">
                                <input class="form-control input-sm" id="hostname" type="text">
                            </div>
                            <p class="col-sm-2 help-block">subdomain.zendesk.com<br/>subdomain.customdoma.in</p>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="key">Shared secret</label>
                            <div class="col-sm-6">
                                <input class="form-control input-sm" id="key" type="text">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="return_to">Return To</label>
                            <div class="col-sm-6">
                                <input class="form-control input-sm" id="return_to" type="text" value=<%= return_to %>>
                            </div>
                        </div>
                    </div>
                    <!-- end meta params -->
                    <!-- begin payload params -->
                    <h4>Payload Parameters</h4>
                    <div class="well">
                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="iat">IAT</label>
                            <div class="col-sm-6">
                                <div class="input-group">
                                    <input class="form-control input-sm" id="iat" type="text">
                                    <span class="input-group-btn">
                                      <button class="btn btn-success btn-sm" id="generate_iat" type="button">
                                        Generate
                                      </button>
                                    </span>
                                </div>
                            </div>
                            <p class="col-sm-2 help-block">Epoch timestamp</p>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="jti">JTI</label>
                            <div class="col-sm-6">
                                <div class="input-group">
                                    <input class="form-control input-sm" id="jti" type="text">
                                    <span class="input-group-btn">
                                      <button class="btn btn-success btn-sm" id="generate_jti" type="button">
                                      Generate
                                      </button>
                                    </span>
                                </div>
                            </div>
                            <p class="col-sm-2 help-block">Unique ID</p>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="name">Name</label>
                            <div class="col-sm-6">
                                <input class="form-control input-sm" id="name" type="text">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="email">Email</label>
                            <div class="col-sm-6">
                                <input class="form-control input-sm" id="email" type="text">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="organization">Organization</label>
                            <div class="col-sm-6">
                                <input class="form-control input-sm" id="organization" type="text">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="phone">Phone</label>
                            <div class="col-sm-6">
                                <input class="form-control input-sm" id="phone" type="text">
                            </div>
                            <p class="col-sm-2 help-block">5551234567</p>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="remote_photo_url">Remote Photo URL</label>
                            <div class="col-sm-6">
                                <input class="form-control input-sm" id="remote_photo_url" type="text">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="external_id">External ID</label>
                            <div class="col-sm-6">
                                <input class="form-control input-sm" id="external_id" type="text">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="locale_id">Locale ID</label>
                            <div class="col-sm-6">
                                <input class="form-control input-sm" id="locale_id" type="text">
                            </div>
                            <p class="col-sm-2 help-block">Numeric value</p>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="locale">Locale</label>
                            <div class="col-sm-6">
                                <input class="form-control input-sm" id="locale" type="text">
                            </div>
                            <p class="col-sm-2 help-block">Numeric value</p>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="role">Role</label>
                            <div class="col-sm-6">
                                <input class="form-control input-sm" id="role" type="text">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="custom_role_id">Custom Role</label>
                            <div class="col-sm-6">
                                <input class="form-control input-sm" id="custom_role_id" type="text">
                            </div>
                            <p class="col-sm-2 help-block">Numeric role ID</p>
                        </div>
                        <!-- end payload params -->
                        <!-- begin tags -->
                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="tags">Tags</label>
                            <div class="col-sm-6">
                                <input class="form-control input-sm" id="tags" placeholder="tag1, tag2, tag3">
                            </div>
                            <p class="col-sm-2 help-block">Comma seperated tags</p>
                        </div>
                        <!-- end tags -->
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-2">
                                <button id="collect_params" class="btn btn-primary btn-lg" type="button">Authenticate</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-md-4 hidden-sm">
                <div data-offset-bottom="0" data-offset-top="2" data-spy="affix">
                    <h4>Payload</h4>
                    <pre id="payload">{}</pre>
                    <h4>URL</h4>
                    <pre id="url">
                    </pre>
                </div>
            </div>
        </div>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/underscore.js/1.5.2/underscore-min.js"></script>
    <script src="bootstrap-3.1.1-dist/js/bootstrap.min.js"></script>
    <script>
    var affix = function(){
      var $affixElement = $('div[data-spy="affix"]');
      $affixElement.width($affixElement.parent().width());
    }
    var collectParams = function(e){
      var o = {};
      $('input').each(function(){
        if (this.value) {
          o[this.id] = this.value;
        }
      });
      var metaKeys = ['hostname', 'key', 'return_to'];
      var payload = _.omit(o, metaKeys);
      var meta = _.pick(o, metaKeys);
      if (payload.tags) {
        payload.tags = _.map(payload.tags.split(','), function(tag){ return tag.trim(); });
      }
      $('#payload').text(JSON.stringify(payload, undefined, 2));
      $.ajax({ type: 'POST',
               data: JSON.stringify({meta: meta, payload: payload}),
               dataType: 'JSON',
               headers: {'content-type': 'application/json'}
             })
       .done(function(data){
          $('#url').text(data.url)
          if (e.type === 'click') {
            window.location.href = data.url;
          }
     });
    }
    $(window)
      .load(function() {
        affix();
      })
      .scroll(function() {
        affix();
      })
      .resize(function() {
      affix();
    });
    $('#generate_iat').click(function(){
      $(this).parent().siblings()
      .val( Math.floor( (new Date).getTime() / 1000 ) )
      .trigger('change');
    });
    $('#generate_jti').click(function(){
      $(this).parent().siblings()
      .val( Math.floor(Math.random() * 100000000000000000))
      .trigger('change');
    });
    $('#collect_params').click(function(e){
      collectParams(e);
    });
    $('input').change(function(e){
      collectParams(e);
    });
    </script>
</body>
</html>
